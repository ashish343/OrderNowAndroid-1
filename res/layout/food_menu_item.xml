<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/dish_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/scan_qr_codes"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/dish_cat_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/dish_photo"
        android:layout_alignTop="@+id/dish_photo"
        android:adjustViewBounds="true"
        android:contentDescription="@string/scan_qr_codes"
        android:paddingBottom="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/dish_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dish_photo"
        android:layout_alignLeft="@+id/dish_photo"
        android:layout_alignRight="@+id/dish_photo"
        android:layout_alignTop="@+id/dish_photo"
        android:layout_margin="1dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:textColor="#4f4667"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dish_photo"
        android:paddingTop="5sp"
        android:textColor="@color/itemNameColor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/addnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:src="@drawable/ic_action_edit" />

    <TextView
        android:id="@+id/dish_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/addnote"
        android:paddingRight="6sp"
        android:paddingTop="8sp"
        android:textColor="@color/dimgray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_name"
        android:layout_toLeftOf="@id/addnote"
        android:layout_toRightOf="@id/dish_photo" />

    <TextView
        android:id="@+id/dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_description"
        android:layout_toRightOf="@id/dish_photo"
        android:textColor="@color/itemPriceColor"
        android:textSize="19sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/addnote"
        android:background="@color/white"
        android:paddingRight="2dp"
        android:src="@drawable/ic_action_new" />

    <ImageButton
        android:id="@+id/subbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addnote"
        android:layout_marginRight="1sp"
        android:layout_toLeftOf="@id/addbutton"
        android:background="@color/white"
        android:src="@drawable/ic_action_remove" />

</RelativeLayout>